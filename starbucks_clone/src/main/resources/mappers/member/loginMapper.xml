  <mapper namespace="com.clone.starbucks.DAO.IMemberDAO">
	<insert id="loginProc" parameterType="com.clone.starbucks.DTO.MemberDTO">
		INSERT INTO userInfo VALUES(#{id}, #{pw}, #{name}, #{email})
	</insert>
	
	<resultMap type="com.clone.starbucks.DTO.MemberDTO" id="member">
		<result property="id" column="id"/>
		<result property="pw" column="pw"/>
		<result property="name" column="name"/>
		<result property="email" column="email"/>
	</resultMap>
  </mapper>
  